.customers
	margin-top 40px
	font-size 26
	font-weight bold
	color #000	

.reviews-left
	p
		font-size 14px
		color #333
		padding-left 20px
		
.reviews-right
	p
		font-size 14px
		color #333
		padding-left 20px		

	

blockquote
	border-left none !important
	background #faf6f3
	border-radius 5px
	font-size 18px
	font-style italic

.footer
	min-height 74px
	margin-top 40px	
	color #333
	font-size 14px
	a
		color $color-test-content
		text-decoration underline !important
	a:hover
		text-decoration none !important	

.question
	text-align right
	
#myModal
	background rgba(237, 237, 237, 0.5)
		
.modal-title
	font-size 24px
	font-weight bold		

.modal-header
	border-bottom none !important
    
.modal-body
	margin-bottom 40px	
	
.close
	font-size 32px !important
	font-weight 100 !important
	line-height 0 !important	
	
.form-control
	width 80% !important
	margin 0 auto	
	height 35px !important
	
.form-control:focus
		border-color $color
		box-shadow inset 0 1px 1px rgba(0,0,0,.075), 0 0 8px rgba(203, 118, 50, .6) !important
		
	
.btn 
	display block !important
	background $color !important
	border-color $color !important	
	font-size 20px
	font-weight bold
	color #fff
	padding 3px 12px !important
	transition  0.5s ease-out 0.5s
	-moz-transition  0.5s ease-out 0.5s
	-o-transition  0.5s ease-out 0.5s
	-webkit-transition  0.5s ease-out 0.5s
	
.btn:hover
	background #fff !important
	color $color
	
		

