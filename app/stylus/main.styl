$bgcolor = #fff
$color = #cb7632
$color-test-content = #a76027
$color-hover-menu = #b16427



@import url('https://fonts.googleapis.com/css?family=PT+Sans');




body
	max-width 960px
	font-family 'PT Sans', sans-serif
	padding 0px
	margin 0px
	display block
	margin 0 auto
	
	
a
	text-decoration none !important	
	
.logo
	margin-top 40px
	color $color
	p
		font-weight bold
		font-size 30px
		
.call-back
	margin-top 40px
	float right
	padding 5px 0px
	.call-back__button
		display inline-block
		.call-back__button_pop-up
			font-size 15px
			color $color
			border 2px solid $color
			border-radius 50px
			padding 4px 17px
			transition  0.5s ease-out 0.5s
			-moz-transition  0.5s ease-out 0.5s
			-o-transition  0.5s ease-out 0.5s
			-webkit-transition  0.5s ease-out 0.5s
		.call-back__button_pop-up:hover
			background $color
			color #fff	
			cursor pointer
	.call-back__phone
		display inline-block
		margin-left 25px
		a
			color #000
			font-size 15px
			font-weight bold
		a:hover
			color $color
				
.navbar
	background-color $color 
	border none
	
.navbar-nav
	a
		color #fff !important
		font-size 15px
		text-decoration underline !important
	a:hover
			background-color $color-hover-menu !important
			text-decoration none !important	
	.active
		a
			background-color $color-hover-menu !important
			text-decoration none !important
		
.main-foto
	min-height 290px
	background #000 url(../img/Antique-Map.jpg) 
	background-repeat no-repeat
	background-position center
	text-align center
	color #fff
	.main-foto__img-overlay
		height 290px
		background-color rgba(208, 133, 57, 0.5)
		h1
			padding-top 145px
		p 
			font-size 24px		
 	
 		
